                        @Html.ValidationMessageFor(model => model.conference_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.location, htmlAttributes: new { @class = "control-label col-md-2" })
