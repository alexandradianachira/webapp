<link rel="stylesheet" href="~/Content/Site.css" type="text/css" />




        <h2>Edit</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Conference</h4>
