@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Hello " + Model.first_name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
     
         @if (Session["User"] == null)
         {
            <li>@Html.ActionLink("New User", "Create", "Users")</li>
            <li>@Html.ActionLink("Log in", "Login", "Users")</li>
         }
         else
         {
            <li>@Html.ActionLink("Log out", "Logout", "Users")</li>

         }
    </ul>
}
