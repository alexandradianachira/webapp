@model IEnumerable<WebApplication.PaperAssignment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Paper
        </th>
        <th>
            Conference
        </th>
        <th>
            First name
        </th>
        <th>
            Subreviewers
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paper.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCmember.Conference.conference_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PCmember.User.first_name)
            </td>
            <td>
                @foreach (var it in item.Subreviewers)
                {
                    @Html.DisplayFor(modelItem => it.User.surname)
                }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_paper_assignment }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_paper_assignment }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_paper_assignment })
            </td>
        </tr>
    }

</table>
